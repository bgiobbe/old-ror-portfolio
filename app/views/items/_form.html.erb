<%#
# Form for creating or editing a Item
%>

<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :medium %><br />
    <%= f.select :medium, @media_options %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :pubinfo %><br />
    <%= f.text_field :pubinfo %>
  </div>
  <div class="field">
    <%= f.label :checkout, "Checked Out" %><br />
    <%= f.date_select :checkout %>
  </div>
  <div class="actions">
    <%= f.submit @submit_text %>
  </div>
<% end %>
